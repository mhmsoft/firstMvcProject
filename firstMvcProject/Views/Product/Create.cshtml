                @Html.EditorFor(model => model.UrunAdi, new { htmlAttributes = new { @class = "form-control" } })
             
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tedarikçi", htmlAttributes: new { @class = "control-label col-md-2" })
