                @Html.DropDownList("KategoriID", new SelectList(ViewBag.Kategoriler, "KategoriID", "KategoriAdi"), htmlAttributes: new { @class = "form-control" })
                
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Miktar", htmlAttributes: new { @class = "control-label col-md-2" })
